{
  "name": "WDRep Codespace",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-dotnettools.csdevkit",
        "angular.ng-template"
      ]
    }
  },
  "forwardPorts": [4200, 8080, 5432],
  "postCreateCommand": "npm install -g @angular/cli && dotnet --version"
}
